# ==============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ==============================================
# Copy this file to .env and configure the values for your environment
# NEVER commit .env file to version control!

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/carselling
DB_USERNAME=postgres
DB_PASSWORD=your_secure_database_password

# JWT Configuration  
# Generate a secure 512-bit (64 bytes) base64 encoded secret key
# You can use: openssl rand -base64 64
JWT_SECRET=your_secure_jwt_secret_key_here_512_bits_minimum
JWT_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# Server Configuration
SERVER_PORT=9000
SERVER_ADDRESS=0.0.0.0

# Logging Configuration
LOG_LEVEL_ROOT=INFO
LOG_LEVEL_APP=DEBUG

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*
CORS_ALLOW_CREDENTIALS=true

# Rate Limiting (requests per minute per IP)
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Email Configuration (for OTP sending)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_ENABLE_TLS=true

# SMS Configuration (for OTP sending)
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://api.sms-provider.com/send

# File Upload Configuration
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB
UPLOAD_DIRECTORY=uploads/

# Cache Configuration
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=1000

# Monitoring and Health Checks
MANAGEMENT_ENDPOINTS=health,info,metrics,prometheus
MANAGEMENT_HEALTH_SHOW_DETAILS=when_authorized

# Production Security Headers
SECURITY_HEADERS_ENABLED=true
CONTENT_SECURITY_POLICY=default-src 'self'
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
